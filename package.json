{
  "name": "spruce-calendar-utils",
  "version": "0.0.1",
  "devDependencies": {
    "@sprucelabs/jest-json-reporter": "latest",
    "@sprucelabs/resolve-path-aliases": "^1.0.17",
    "@sprucelabs/semantic-release": "^4.0.6",
    "@sprucelabs/spruce-test-fixtures": "latest",
    "@sprucelabs/test": "latest",
    "@sprucelabs/test-utils": "latest",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.28.0",
    "eslint-config-spruce": "^10.10.6",
    "jest": "^27.0.4",
    "jest-circus": "^27.0.4",
    "prettier": "^2.3.1",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  },
  "description": "helpful calendar utilities",
  "skill": {
    "namespace": "spruce-calendar-utils"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  },
  "scripts": {
    "watch.build.dev": "concurrently 'yarn build.dev' 'yarn watch.tsc' \"chokidar 'src/**/*' --ignore '.*/tmp/.*' -c 'yarn build.copy-files && yarn build.resolve-paths'\"",
    "test": "jest",
    "watch.tests": "jest --watch",
    "watch.tsc": "tsc -w",
    "build.dev": "yarn build.tsc ; yarn resolve-paths.lint",
    "build.tsc": "yarn build.copy-files && tsc",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "lint": "eslint --cache '**/*.ts'"
  }
}
