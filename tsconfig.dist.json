{
    "compilerOptions": {
		"skipLibCheck": true,
        "module": "ES2022",
        "target": "ES6",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "outDir": "./build",
        "baseUrl": "src",
        "experimentalDecorators": true,
		"paths": {
			"#spruce/*": [".spruce/*"]
		}
    },
    "include": [
        "./*.ts",
        "./**/*.ts"
    ],
    "exclude": [
        "**/node_modules/*",
        "build/*",
        "esm/*"
    ]
}
